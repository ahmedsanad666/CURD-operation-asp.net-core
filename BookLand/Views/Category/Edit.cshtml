@*
    getting category model

*@
@model Category;
@{
    ViewData["Title"] = "Create";

}

<div class="createNew">
    <h1 class="text-center">Edit Category</h1>

    <div class="container">

        <form method="post" asp-action="Edit">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder"></label>
                <input type="number" asp-for="DisplayOrder" class="form-control">
                <span asp-validation-for="DisplayOrder" class="form-text text-danger"></span>

            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>


        </form>
    </div>
</div>